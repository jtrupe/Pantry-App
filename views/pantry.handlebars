<div class="container">
  {{#if showNavBar}}
  {{> nav}}
  {{/if}}

  <div class="title text-center mb-0 py-3">
    <h1 class="display-4 text-center m-2">Pantry</h1>
  </div>

  <div class="row">

    <div class="col-sm-6 pt-3 add">
      <h2 class="text-center"><u>Add Ingredients</u></h2>
      <input type="text" id="ingredient-search" class="form-control" placeholder="start typing to find your ingredient">
      <div class="returned-search-items mt-4"></div>
    </div>

    <div class="myIngredients col-sm-6 pt-3">
      <h2 class="text-center mb-4"><u>My Ingredients</u></h2>
      <div class="ingredient-list"></div>
      {{#each data}}
      <div class="pantry-item ml-3 font-weight">
        Item Name: {{name}}
        <button value={{id}}
          class="pantry-item-remove text-center btn btn-outline-dark pl-2 pr-1 float-right">‚ùå</button>
        <hr>
      </div>
      {{/each}}
    </div>
  </div>
</div>

<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<script src="/js/pantry.js"></script>